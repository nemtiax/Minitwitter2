<div class="container">
<h1>Register</h1>
<div>
<%= form_tag("/register", method: "post") do %>
	<%= label_tag(:name, "Name:") %>
	<%= text_field_tag(:name) %>
	<%= label_tag(:email, "Email:") %>
	<%= text_field_tag(:email) %>
	<%= label_tag(:password, "Password:") %>
	<%= text_field_tag(:password) %>
	<%= label_tag(:password_confirmation, "Password Confirm:") %>
	<%= text_field_tag(:password_confirmation) %>
	<%= submit_tag("Register") %>
<% end %>
</div>
</div>
