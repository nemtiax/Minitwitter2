<table class="table table-striped"> 
<% tweets.each do |tweet| %>
<tr>
	<td><%= link_to(image_tag(tweet.poster.image_url, class: "img-thumbnail", height: "128", width: "128"), action: "show", controller: "users", id: tweet.poster.id)  %></td>
	<td><%= link_to(tweet.poster.name, action: "show", controller: "users", id: tweet.poster.id)  %> sez: "<%= tweet.body %>" at <%= tweet.created_at.strftime("%Y-%m-%d") %> </td>
</tr>
<% end %>
</table>