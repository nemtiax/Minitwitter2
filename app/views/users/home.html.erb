<h1>Welcome, <%= @user.name %>!</h1>
<table class="table table-striped"> 
<% @followed_tweets.each do |tweet| %>
<tr>
	<td><%= link_to(image_tag(tweet.poster.image_url, class: "img-thumbnail", height: "64", width: "64"), action: "show", controller: "users", id: tweet.poster.id)  %></td>
	<td><%= link_to(tweet.poster.name, action: "show", controller: "users", id: tweet.poster.id)  %> sez: <%= tweet.body %> </td>
</tr>
<% end %>
</table>